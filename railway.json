{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && python3 -m pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd backend && python3 -m gunicorn wsgi:app --bind 0.0.0.0:$PORT --workers 2 --timeout 120",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "FLASK_ENV": "production",
        "PORT": "5050",
        "PYTHON_VERSION": "3.11"
      }
    }
  }
} 