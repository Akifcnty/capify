# Railway Environment Variables - CAPIFY Project
# Copy this to Railway dashboard environment variables

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here
FLASK_APP=wsgi.py

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Facebook API Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_DATASET_ID=your-facebook-dataset-id
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# GTM Configuration
GTM_DEFAULT_CONTAINER_ID=GTM-XXXXXXX

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/capify/app.log

# Security Headers
SECURE_HEADERS_X_FRAME_OPTIONS=SAMEORIGIN
SECURE_HEADERS_X_CONTENT_TYPE_OPTIONS=nosniff
SECURE_HEADERS_X_XSS_PROTECTION=1; mode=block

# Redis Configuration (Railway Redis - opsiyonel)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per minute

# Railway specific configuration
PORT=5050
PYTHON_VERSION=3.11

# CAPIFY specific variables
APP_NAME=CAPIFY
APP_VERSION=2.0.0
ENVIRONMENT=production

# Production Settings
DEBUG=False
TESTING=False

# Monitoring Configuration
PROMETHEUS_ENABLED=true 