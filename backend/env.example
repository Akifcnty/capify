# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/capify_db
# For SQLite (development only)
# DATABASE_URL=sqlite:///app.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Facebook CAPI Configuration
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_DATASET_ID=your-facebook-dataset-id
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Server Configuration
PORT=5050

# SSL Configuration (if using HTTPS)
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/capify/app.log

# Monitoring Configuration
PROMETHEUS_ENABLED=true 